@{
    Layout = "_Layout";
}

@model RecipeBox.Models.Tag;

<h4>Create a new Tag:</h4>

@using (Html.BeginForm())
{
    @Html.LabelFor(model => model.Name)
    @Html.TextBoxFor(model => model.Name)
    <br>
    @Html.LabelFor(model => model.Details)
    @Html.TextBoxFor(model => model.Details)
    <br>
    @Html.Label("Select recipe")
    @Html.DropDownList("RecipeId")
    <br>
    <input type="submit" value="Add new recipe" class="btn btn-default" />
}
<p>@Html.ActionLink("Show all recipes", "Index", "Recipes")</p>