@{
    Layout = "_Layout";
}

@model RecipeBox.Models.Tag

<h2>Tag Details</h2>
<hr />
<h3>@Html.DisplayNameFor(model => model.Details): @Html.DisplayFor(model => model.Details)</h3>

@if (@Model.Recipes.Count == 0)
{
    <p>This tag does not have any recipes attached to it.</p>
}
else
{
    <h4>Recipes that are connected to this tag:</h4>
    <ul>
        @foreach (var join in Model.Recipes)
        {
            <li>@join.Recipe.Name</li>
            @using (Html.BeginForm("DeleteRecipe", "Recipes"))
            {
                @Html.Hidden("joinId", @join.RecipeTagId)
                <input type="submit" value="Delete" />
            }
        }
    </ul>
}

<p>@Html.ActionLink("Back to list", "Index")</p>
<p>@Html.ActionLink("Update Tag", "Update", new { id = Model.TagId })</p>
<p>@Html.ActionLink("Delete Tag", "Delete", new { id = Model.TagId })</p>