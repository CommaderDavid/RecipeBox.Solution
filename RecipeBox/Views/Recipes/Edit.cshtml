@{
    Layout = "_Layout";
}

@model RecipeBox.Models.Recipe;

<h4>Edit a Recipe</h4>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.RecipeId)
    
    @Html.LabelFor(model => model.Name)
    @Html.EditorFor(model => model.Name)
    <br>
    @Html.LabelFor(model => model.Instructions)
    @Html.EditorFor(model => model.Instructions)
    <br>
    @Html.LabelFor(model => model.RecipeRate)
    @Html.DropDownList("RecipeRate",
        new SelectList(new int[] { 0, 1, 2, 3, 4, 5 }))
    <br>
    @Html.LabelFor(model => model.Ingredient)
    @Html.EditorFor(model => model.Ingredient)
    <br>
    @Html.Label("Select tag")
    @Html.DropDownList("TagId")
    <br>
    <input type="submit" value="Edit recipe" class="btn btn-default" />
}
<p>@Html.ActionLink("Show all recipes", "Index", "Recipes")</p>